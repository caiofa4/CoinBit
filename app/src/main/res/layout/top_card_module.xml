<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topCardContainer"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/generic8dp"
    android:layout_marginEnd="@dimen/generic8dp"
    android:background="@drawable/ripple_background"
    android:elevation="4dp"
    android:padding="@dimen/generic16dp"
    android:stateListAnimator="@animator/card_down_animation">

    <ImageView
        android:id="@+id/ivTopCoin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/cd_coin_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvTopPair"
        style="@style/CoinBitText.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTopCoin"
        tools:text="BTC/USD" />

    <TextView
        android:id="@+id/tvTopPrice"
        style="@style/CoinBitText.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/generic10dp"
        android:maxLines="1"
        android:textColor="@color/colorGain"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTopPair"
        tools:text="8360.90" />

    <TextView
        android:id="@+id/tvTopPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGain"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTopPrice"
        tools:text="-2.24 %" />

    <TextView
        android:id="@+id/tvTopMarketCap"
        style="@style/CoinBitText.CaptionAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTopPriceChange"
        android:visibility="gone"
        tools:text="Mkt cap : 8360.90" />


</androidx.constraintlayout.widget.ConstraintLayout>