<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/generic10dp"
        android:layout_marginStart="@dimen/generic10dp"
        android:layout_marginEnd="@dimen/generic10dp"
        android:layout_marginBottom="@dimen/generic10dp"
        android:background="@drawable/ripple_background">

        <TextView
            android:id="@+id/tvTxnTypeAndQuantity"
            style="@style/CoinBitText.Body4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tvTxnTimeAndExchange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Buy (0.22)" />

        <TextView
            android:id="@+id/tvTxnTimeAndExchange"
            style="@style/CoinBitText.TitleAlternate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/generic4dp"
            android:paddingEnd="@dimen/generic8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTxnTypeAndQuantity"
            tools:text="Feb 24,2018 (CCAG)" />

        <TextView
            android:id="@+id/tvTxnCost"
            style="@style/CoinBitText.Body4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvTxnTimeAndExchange"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$100" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>