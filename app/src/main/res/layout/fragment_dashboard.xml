<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llDashboardContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeDashboardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cvWallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rvCoinDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/generic4dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        android:elevation="@dimen/generic10dp"
        app:cardCornerRadius="@dimen/generic16dp"
        android:layout_marginBottom="-16dp"
        android:backgroundTint="@color/mdtp_transparent_black"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/generic8dp"
        android:layout_marginBottom="@dimen/generic16dp"
        >

        <TextView
            android:id="@+id/tvCostLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="@dimen/generic10dp"
            style="@style/CoinBitText.Body4"
            android:text="@string/cost"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCostLabel"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="@dimen/generic10dp"
            style="@style/CoinBitText.Body4"
            android:text="@string/market_value"
            />

        <TextView
            android:id="@+id/tvCostValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            android:layout_marginStart="@dimen/generic10dp"
            style="@style/CoinBitText.Body4"
            android:text="500"
            />

        <TextView
            android:id="@+id/tvWalletValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCostValue"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            android:layout_marginStart="@dimen/generic10dp"
            style="@style/CoinBitText.Body4"
            android:text="200"
            />

        <LinearLayout
            android:id="@+id/llHidden"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvWalletValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/generic10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CoinBitText.Body4"
                android:text="Pega aqui na minha piroca imeeeeensa. Depois disso, vem aqui me dar uma mamada goxxxxtosa, que eu estou precisando. Por fim, vai tomar no meio do olho do seu cu. Obrigado"
                />

            <ImageView
                android:id="@+id/ivTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_button"
                android:layout_marginStart="@dimen/generic16dp"
                android:layout_marginEnd="@dimen/generic16dp"
                />

        </LinearLayout>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>