<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.signal.research">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.signal.research.CoinBitApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl">
        <activity android:name="com.signal.research.features.launch.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="open"
                    android:scheme="coinhood" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.signal.research.features.HomeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.signal.research.features.coindetails.CoinDetailsPagerActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.signal.research.features.HomeActivity" />
        <activity
            android:name="com.signal.research.features.newslist.NewsListActivity"
            android:parentActivityName="com.signal.research.features.coindetails.CoinDetailsPagerActivity" />
        <activity
            android:name="com.signal.research.features.transaction.CoinTransactionActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.signal.research.features.exchangesearch.ExchangeSearchActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.signal.research.features.pairsearch.PairSearchActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.signal.research.features.coinsearch.CoinSearchActivity"
            android:label="@string/search_coin"
            android:parentActivityName="com.signal.research.features.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.signal.research.features.coindetails.CoinDetailsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.signal.research.features.coinsearch.CoinSearchActivity" />

        <activity
            android:name="com.signal.research.features.ticker.CoinTickerActivity"
            android:parentActivityName="com.signal.research.features.coindetails.CoinDetailsPagerActivity" />

    </application>

</manifest>